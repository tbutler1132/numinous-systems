{
  "name": "@numinous-systems/root",
  "type": "module",
  "private": true,
  "workspaces": [
    "core/node",
    "core/memory",
    "core/sensor",
    "core/identity",
    "sensors/finance",
    "sensors/thought",
    "apps/dashboard",
    "apps/projection"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "./scripts/test-all.sh",
    "clean": "npm run clean --workspaces",
    "lint": "eslint core sensors",
    "validate-links": "tsx scripts/validate-links.ts",
    "check": "npm run lint && npm run build && npm run test && npm run validate-links",
    "assets:push": "./scripts/assets-push.sh",
    "assets:pull": "./scripts/assets-pull.sh",
    "setup": "npm install && ./scripts/assets-pull.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "gray-matter": "^4.0.3",
    "typescript-eslint": "^8.53.0"
  }
}
